import { Component, OnInit } from '@angular/core';

@Component({
  selector: 'app-header',
  templateUrl: './header.component.html',
  styleUrls: ['./header.component.css']
})
export class HeaderComponent implements OnInit {
  isLoggedIn = true; // Simulate the user login status. Replace with actual login logic.

  constructor() { }

  ngOnInit(): void { }
}


import { NgModule } from '@angular/core';
import { RouterModule, Routes } from '@angular/router';
import { HomeComponent } from './home/home.component';
import { HeaderComponent } from './header/header.component';

const routes: Routes = [
  { path: 'home', component: HomeComponent },
  { path: 'enter-reports', component: HomeComponent },
  { path: 'setup', component: HomeComponent },
  { path: 'trigger-reports', component: HomeComponent },
  { path: 'pdf-utility', component: HomeComponent },
  { path: 'logout', component: HomeComponent },
  { path: '', redirectTo: '/home', pathMatch: 'full' },
];

@NgModule({
  imports: [RouterModule.forRoot(routes)],
  exports: [RouterModule]
})
export class AppRoutingModule { }




