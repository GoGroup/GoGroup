import { Component } from '@angular/core';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent {
  selectedOption: string;
  orderId: string;
  exam: string;
  school: string;
  modules: string;
  orderIds: string;
  examInstance: string;
  fromDate: Date;
  toDate: Date;

  // Hardcoded values
  exams = [
    { value: 'optionA', viewValue: 'Option A' },
    { value: 'optionB', viewValue: 'Option B' },
    { value: 'optionC', viewValue: 'Option C' }
  ];

  examInstances = [
    { value: 'optionA', viewValue: 'Option A' },
    { value: 'optionB', viewValue: 'Option B' },
    { value: 'optionC', viewValue: 'Option C' }
  ];

  onSubmit() {
    // Handle form submission
    console.log('Form submitted:', {
      selectedOption: this.selectedOption,
      orderId: this.orderId,
      exam: this.exam,
      school: this.school,
      modules: this.modules,
      orderIds: this.orderIds,
      examInstance: this.examInstance,
      fromDate: this.fromDate,
      toDate: this.toDate
    });
  }
}


<mat-card>
  <div class="my-theme">
