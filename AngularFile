import { Component } from '@angular/core';

interface RadioOption {
  value: string;
  label: string;
  fields?: Field[];
}

interface Field {
  type: 'text' | 'dropdown' | 'date';
  label: string;
  name?: string;
  options?: string[];
  fromDateLabel?: string;
  toDateLabel?: string;
}

@Component({
  selector: 'app-your-component',
  templateUrl: './your-component.component.html',
  styleUrls: ['./your-component.component.css']
})
export class YourComponent {
  radioOptions: RadioOption[] = [
    { 
      value: 'option1', 
      label: 'Option 1', 
      fields: [
        { type: 'text', label: 'Option 1 Text Field', name: 'option1Text' }
      ]
    },
    { 
      value: 'option2', 
      label: 'Option 2',
      fields: [
        { type: 'dropdown', label: 'Dropdown', options: ['Option A', 'Option B', 'Option C'], name: 'dropdown' },
        { type: 'date', label: 'Date Range', fromDateLabel: 'From Date', toDateLabel: 'To Date' }
      ]
    }
  ];

  continueButtonLabel = 'Continue';
  selectedOption: string;

  onSubmit() {
    // Your submit logic here
  }
}
